html, body {
    width: 100%;
    height: 100%;
}
body {
    background-color: #f0f0f0;
    overflow-x: hidden;
}
body.skin-1 {
    background: #3e495f;
}
.navbar-fixed-top {
    border-color: #222;
}
.navbar-brand {
    padding-left: 50px;
    background-image: url(<%= image_path('briefcase_32.png') %>);
    background-repeat: no-repeat;
    background-position: 0% center;
}
body.boxed-layout #wrapper {
    background-color: white;
    max-width: 1200px;
    margin: 0 auto;
    -webkit-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75);
    padding-top: 55px;
    width: 100%;
    overflow-x: hidden;
}
.page-header {
    margin-top: 0px;
}
.login {
    width: 30%;
    margin-left: auto;
    margin-right: auto;
}
.titleFront {
    @import url(http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300);
    font-size: 7.5em;
    font-family: 'Open Sans Condensed', sans-serif;
    color: #ffffff;
    text-shadow: 0px 0px 2px rgba(150, 150, 150, 1);
    margin-bottom: 40px;
}
.wrapper-login {
    margin-top: 100px;
}
.bg {
    position: fixed;
    z-index: -1;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
    background-image: url(<%= image_path('bg2.jpg') %>);
}

@media (min-width: 768px) {
    .sidebar {
        position: fixed;
        top: 51px;
        bottom: 0;
        left: 0;
        z-index: 1000;
        display: block;
        padding: 20px;
        overflow-x: hidden;
        overflow-y: auto;
        background-color: #2e2e2e;
        border-right: 1px solid #eee;
        color: #ffffff;
    }
}
.sidebar > ul > li > a {
    color: #ffffff;
}
.nav-sidebar {
    margin-right: -21px;
    margin-bottom: 20px;
    margin-left: -20px;
}
.nav-sidebar > .active > a {
    color: #000;
    background-color: #ffffff;
}
.nav-sidebar a:hover, .nav-sidebar a:focus {
    color: #000;
    background-color: #ffffff;
}
.nav-sidebar > li > a {
    padding-right: 20px;
    padding-left: 20px;
}
.boton-agregar {
    float: right;
    margin-right: 50px;
}
.navbar-inverse {
    background-color: #2e2e2e;
    border-color: #2e2e2e;
}
.alert {
    width: 100%;
    background: #fff;
    border-bottom: 4px solid #eaeff3;
    color: #e34848;
    position: fixed;
    top: 0;
    font-size: 14px;
    font-weight: bold;
    height: 45px;
    -moz-box-shadow: 0px 0px 3px 1px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 0px 3px 1px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 0px 3px 1px rgba(0, 0, 0, 0.3);
    border-radius: 0px;
    text-align: center;
    line-height: 10px;
    font-family: HelveticaNeue, 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 14px;
}
.alert-dismissable .close, .alert-dismissible .close {
    top: -5px;
}
.perfil {
    margin-top: 20px;
}
#boton-icon {
    text-decoration: none;
}
#boton-icon:hover{
    text-decoration: none;
    background-color: white;
    color: #275379;
}
.perfil img {
    margin: 10px;
}
.green-color {
    color: green;
}
.red-color {
    color: red;
}
.field_with_errors {
    color: rgb(169, 68, 66);
    background-color: transparent;
}
.field_with_errors .form-control {
    border-color: #a94442;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
}
.hidden {
    visibility: hidden;
}