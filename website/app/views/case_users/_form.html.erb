<%= form_for @case_user, :html => { :class => "form-horizontal case_user" } do |f| %>

    <% if @case_user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@case_user.errors.count, "error") %> prohibited this case_user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @case_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :case_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :case_id, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:case_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:user_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            case_users_path, :class => 'btn btn-default' %>

<% end %>
