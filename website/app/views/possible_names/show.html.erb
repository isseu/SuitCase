<%- model_class = PossibleName -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @possible_name.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @possible_name.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_lastname) %>:</strong></dt>
  <dd><%= @possible_name.first_lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:second_lastname) %>:</strong></dt>
  <dd><%= @possible_name.second_lastname %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              possible_names_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_possible_name_path(@possible_name), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              possible_name_path(@possible_name),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
