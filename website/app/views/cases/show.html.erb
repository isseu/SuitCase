<%- model_class = Case -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:rol) %>:</strong></dt>
  <dd><%= @case.rol %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @case.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tribunal) %>:</strong></dt>
  <dd><%= @case.tribunal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:caratula) %>:</strong></dt>
  <dd><%= @case.caratula %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info_id) %>:</strong></dt>
  <dd><%= @case.info_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info_type) %>:</strong></dt>
  <dd><%= @case.info_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              cases_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_case_path(@case), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              case_path(@case),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
