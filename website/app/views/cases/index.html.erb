<%- model_class = Case -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:rol) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:tribunal) %></th>
      <th><%= model_class.human_attribute_name(:caratula) %></th>
      <th><%= model_class.human_attribute_name(:info_id) %></th>
      <th><%= model_class.human_attribute_name(:info_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cases.each do |case| %>
      <tr>
        <td><%= link_to case.id, case_path(case) %></td>
        <td><%= case.rol %></td>
        <td><%= case.fecha %></td>
        <td><%= case.tribunal %></td>
        <td><%= case.caratula %></td>
        <td><%= case.info_id %></td>
        <td><%= case.info_type %></td>
        <td><%=l case.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_case_path(case), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      case_path(case),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_case_path,
            :class => 'btn btn-primary' %>
