        <%= f.text_field :password_judicial, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:password_judicial]) %>
    </div>
    <div class="control-group">
      <%= f.label :telephone, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :telephone, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:telephone]) %>
    </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
