<%= form_for @user, :html => { :class => "form-horizontal user", :multipart => true } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error", "errores") %> no <%= (@user.errors.count > 1) ? "permitieron" : "permitio"  %> guardar el usuario.</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:email]) %>
    </div>
    <div class="form-group">
      <%= f.label :role, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :role, User::ROLES.collect { |x| [x.capitalize, x] }, {}, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:role]) %>
    </div>
    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:name]) %>
    </div>
    <div class="form-group">
      <%= f.label :first_lastname, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :first_lastname, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:first_lastname]) %>
    </div>
    <div class="form-group">
      <%= f.label :second_lastname, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :second_lastname, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:second_lastname]) %>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:password]) %>
    </div>
    <div class="form-group">
      <%= f.label :telephone, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :telephone, :class => 'form-control' %>
      </div>
      <%= error_span(@user[:telephone]) %>
    </div>
  <div class="form-group">
    <%= f.label :rut, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :rut, :class => 'form-control' %>
    </div>
    <%= error_span(@user[:rut]) %>
  </div>
    <div class="form-group">
      <%= f.label :avatar, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :avatar %>
      </div>
      <%= error_span(@user[:avatar]) %>
    </div>

    <div class="text-center">
      <div class="col-sm-6">
        <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
      </div>
      <div class="col-sm-6">
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    users_path,
                    :class => 'btn btn-default btn-block' %>
      </div>
    </div>

<% end %>
