<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_lastname) %>:</strong></dt>
  <dd><%= @user.first_lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:second_lastname) %>:</strong></dt>
  <dd><%= @user.second_lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rut) %>:</strong></dt>
  <dd><%= @user.rut %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @user.role %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @user.telephone %></dd>
</dl>
<% if can? :edit, @user %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @user %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>

<hr>
<% if current_user.id == @user.id %>
<h2>Ultimos casos agregados</h2>
<div class="row">
  <div class="col-md-8">
    <%= line_chart Case.group_by_day(:created_at, last: 30).count , id: 'cases-chart'%>
  </div>
  <div class="col-md-4">
    <b>Estado del scrapper: <span id="<%= (true) ? 'estado-sc-on': 'estado-sc-off'%>">ON</span></b>
  </div>
</div>
<% end %>