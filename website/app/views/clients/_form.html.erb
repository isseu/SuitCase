<%= form_for @client, :html => { :class => "form-horizontal client" } do |f| %>

    <% if @client.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@client[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :rut, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rut, :class => 'form-control' %>
    </div>
    <%= error_span(@client[:rut]) %>
  </div>
  <div class="control-group">
    <%= f.label :first_lastname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_lastname, :class => 'form-control' %>
    </div>
    <%= error_span(@client[:first_lastname]) %>
  </div>
  <div class="control-group">
    <%= f.label :second_lastname, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :second_lastname, :class => 'form-control' %>
    </div>
    <%= error_span(@client[:second_lastname]) %>
  </div>
  <div class="control-group">
    <%= f.label :company, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :company, :class => 'form-control' %>
    </div>
    <%= error_span(@client[:company]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            clients_path, :class => 'btn btn-default' %>

<% end %>
