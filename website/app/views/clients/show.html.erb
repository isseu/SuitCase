<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %>: <%= @client.inspect %></h1>
</div>
<div class="row">
    <div class="col-md-7 col-md-offset-3">
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
          <dd><%= @client.name %></dd>
          <dt><strong><%= model_class.human_attribute_name(:rut) %>:</strong></dt>
          <dd><%= @client.rut %></dd>
          <% if not @client.is_company %>
              <dt><strong><%= model_class.human_attribute_name(:first_lastname) %>:</strong></dt>
              <dd><%= @client.first_lastname %></dd>
              <dt><strong><%= model_class.human_attribute_name(:second_lastname) %>:</strong></dt>
              <dd><%= @client.second_lastname %></dd>
          <% end %>
        </dl>
    </div>
    <div class="col-md-2">

      <div class="perfil-botones">
        <% if can? :edit, @client %>
            <%= link_to edit_client_path(@client), id: 'boton-icon' do %>
                <i class="fa fa-pencil fa-3x"></i>
            <% end %>
        <% end %>
        <% if can? :destroy, @client %>
            <%= link_to client_path(@client),
                        :method => 'delete',
                        :id => 'boton-icon',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                <i class="fa fa-trash-o fa-3x"></i>
            <% end %>
        <% end %>
      </div>
    </div>
</div>