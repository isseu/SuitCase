<div class="page-header">
  <h1>Buscar</h1>
</div>
<%= form_for @search, :html => { :class => "form-horizontal client", :id => 'form_search' } do |f| %>

    <div class="form-group">
      <%= f.label :rol, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :rol, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
    <div id="form-company-disappear">
      <div class="form-group">
        <%= f.label :first_lastname, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_lastname, :class => 'form-control' %>
        </div>
        <%= error_span(@search[:first_lastname]) %>
      </div>
      <div class="form-group ">
        <%= f.label :second_lastname, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :second_lastname, :class => 'form-control' %>
        </div>
        <%= error_span(@search[:second_lastname]) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :rut, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :rut, :class => 'form-control' %>
        <%= error_span(@search[:rut]) %>
      </div>

    </div>

    <div class="text-center">
      <div class="col-sm-12">
        <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
      </div>
    </div>
<% end %>