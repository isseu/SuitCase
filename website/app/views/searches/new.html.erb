<div class="page-header">
  <h1>Buscar</h1>
</div>
<div ng-controller="SearchController as search">
<form class="form-horizontal client"  ng-submit="search.submit()">
    <div class="form-group">
      <%= label_tag :rol, 'Rol', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_field_tag :rol, '', :class => 'form-control', 'ng-model' => 'search.rol' %>
      </div>
    </div>
  <div class="text-center">
      <div class="col-sm-12">
        <%= button_tag :class => 'btn btn-primary btn-block' do %>
            {{ search.buttonText }} <i ng-show="search.working" class="fa fa-spinner fa-spin"></i>
        <% end %>
      </div>
    </div>
    <br>
  <div ng-show="search.show_table" id="search_table_div">
    <h2>Resultados</h2>
      <table class="search_table table table-striped">
        <thead>
        <tr>
          <th>Rol</th>
          <th>Fecha</th>
          <th>Tribunal</th>
          <th>Caratula</th>
          <th>Portal</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
  </div>
</form>

</div>